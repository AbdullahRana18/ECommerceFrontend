<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Navbar styling */
        .navbar {
            background-color: #ffffff;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: #0d6efd !important;
            font-weight: 700;
            font-size: 1.3rem;
        }

        /* Right side button */
        .navbar .btn-auth {
            background-color: #0d6efd;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 6px 15px;
            transition: background-color 0.3s ease;
        }

            .navbar .btn-auth:hover {
                background-color: #0b5ed7;
            }

        /* Layout styling */
        main {
            min-height: 85vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        footer {
            background-color: #f8f9fa;
            color: #6c757d;
            padding: 10px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
            border-top: 1px solid #dee2e6;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Left side -->
                <a class="navbar-brand" asp-controller="Account" asp-action="Login">E-Commerce</a>

                <!-- Right side button -->
                @if (ViewData["Title"]?.ToString() == "Login")
                {
                    <a asp-controller="Account" asp-action="Signup" class="btn btn-auth">Sign Up</a>
                }
                else if (ViewData["Title"]?.ToString() == "User Signup")
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-auth">Login</a>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <p class="mb-0">&copy; 2025 E-Commerce WebApp | All rights reserved</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
