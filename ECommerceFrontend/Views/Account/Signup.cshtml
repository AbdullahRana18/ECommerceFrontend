@{
    ViewData["Title"] = "User Signup";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow p-4 rounded-3">
                <h3 class="text-center mb-4">Create Your Account</h3>

                <form method="post" asp-action="Signup">
                    <div class="form-group mb-3">
                        <label for="Name">Full Name</label>
                        <input type="text" class="form-control" id="Name" name="Name"
                               placeholder="Enter full name" required maxlength="100" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Email">Email address</label>
                        <input type="email" class="form-control" id="Email" name="Email"
                               placeholder="Enter email" required maxlength="150" />
                    </div>

                    <div class="form-group mb-3 position-relative">
                        <label for="PasswordHash">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="PasswordHash" name="PasswordHash"
                                   placeholder="Enter password" required maxlength="255" />
                            <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="Role">Role</label>
                        <select class="form-control" id="Role" name="Role">
                            <option value="User">User</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Sign Up</button>

                    <div class="text-center mt-3">
                        <p>
                            Already have an account?
                            <a asp-controller="Account" asp-action="Login">Login</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons for Eye Button -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- SweetAlert2 for alert messages (optional future use) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const togglePassword = document.getElementById("togglePassword");
            const passwordField = document.getElementById("PasswordHash");

            togglePassword.addEventListener("click", function () {
                const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
                passwordField.setAttribute("type", type);
                this.innerHTML = type === "password"
                    ? '<i class="bi bi-eye"></i>'
                    : '<i class="bi bi-eye-slash"></i>';
            });
        });
    </script>
}
